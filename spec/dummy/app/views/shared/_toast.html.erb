<%# Toast/Flash Message Partial
    Usage: render 'shared/toast', message: 'Success!', type: 'success'
    Types: success, error, warning, info
%>
<div class="toast show align-items-center <%= "text-bg-#{type == 'error' ? 'danger' : type}" %>"
     role="alert"
     aria-live="assertive"
     aria-atomic="true"
     data-controller="flash-messages"
     data-flash-messages-type-value="<%= type %>">
  <div class="d-flex">
    <div class="toast-body">
      <strong>
        <%= case type
            when 'success' then '✓'
            when 'error' then '✗'
            when 'warning' then '⚠'
            when 'info' then 'ℹ'
            else ''
            end %>
        <%= type.humanize %>
      </strong>
      <div><%= message %></div>
    </div>
    <button type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"></button>
  </div>
</div>
