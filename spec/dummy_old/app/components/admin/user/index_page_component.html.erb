<h1><%= title %></h1>

<div data-scope="<%= scope %>">
  <div class="py-3">
    <div class="d-flex">
      <% if show_search %>
        <%= search %>
      <% end %>
      <% if filter %>
        <%= filter %>
      <% end %>
    </div>
  </div>

  <div class="resources-list">
    <% if resources.any? %>
      <% resources.each do |user| %>
        <div class="user-row">
          <div class="user-name"><%= user.full_name %></div>
          <div class="user-email"><%= user.email %></div>
          <div class="user-role"><%= user.role %></div>
        </div>
      <% end %>
    <% else %>
      <p>No users found</p>
    <% end %>
  </div>
</div>
